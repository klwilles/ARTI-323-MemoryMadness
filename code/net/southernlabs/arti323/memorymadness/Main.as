package net.southernlabs.arti323.memorymadness {		import flash.display.MovieClip;	import com.inruntime.utils.Global;	import net.southernlabs.arti323.memorymadness.controllers.Router;	import net.southernlabs.arti323.memorymadness.models.GameAchievements;	import net.southernlabs.arti323.memorymadness.views.PreloadBar;		public class Main extends MovieClip {				public var router:Router;		private var $:Global = Global.getInstance();				public var render_container:MovieClip;		public var background_container:MovieClip;				public function Main() {						render_container = new MovieClip();						background_container = new PreloadBar();			background_container.x = stage.stageWidth/2;			background_container.y = stage.stageHeight/2;						this.addChild(background_container);			this.addChild(render_container);						$.stage = this.stage;			$.score = GameAchievements.getInstance(); //persist in memory for now			$.preloader = background_container; // persist preloader			$.router = new Router("welcome", render_container);		}	}	}