/** *	Router delegates activities to take place (menu or level) *	Menu or Level take up the entire screen (not parts of it).  */package net.southernlabs.arti323.memorymadness.controllers {		import net.southernlabs.arti323.memorymadness.controllers.places.*;	import net.southernlabs.arti323.memorymadness.controllers.base.Controller;	import flash.events.Event;	import flash.display.MovieClip;			public class Router extends Controller {				private var c:MovieClip;						public function Router(place:String, container:MovieClip) {			c = container;			goto(place);		}				override public function goto(place:String):void {			if(place=="welcome"){				trace("=> "+place+" context constructed to delegate");				m = new Welcome();				m.setRenderContainer(c);				m.run();			}  else if(place=="level-01"){				trace("=> "+place+" context constructed to delegate");				l = new Level01();				l.setRenderContainer(c);				l.run();			} else if(place=="game-over"){				m = new GameOver();				m.setRenderContainer(c);				m.run();			} else {				throw new Error(place+" had no matching implementors for delegate to assign"); 			}		}	}}