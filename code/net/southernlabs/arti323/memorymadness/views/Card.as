package net.southernlabs.arti323.memorymadness.views {		import flash.display.MovieClip		import flash.events.Event;	public class Card extends MovieClip {				private var card_name:String;		private var frame_number:uint;		private var is_card_showing:Boolean;		public function Card() {			// constructor code			is_card_showing = false;		}				public function setName(n:String):void {			card_name = n;		}				public function getName():String {			return card_name;		}				public function setFrameNumber(i:uint):void {			if(i>=0){				frame_number = i;				//gotoAndStop(frame_number);			} else {				throw new Error("The frame number must be set zero or higher, ref: "+this.name); 			}		}				public function getFrameNumber():uint {			return frame_number;		}				public function flip(){			if(is_card_showing==false){				// flip animation to reveal card				is_card_showing = true;				this.gotoAndStop(getFrameNumber()+2);				trace("card flips");				//this.addEventListener(Event.ENTER_FRAME, handleAnimation);			} else {				// flip animation to hide card				is_card_showing = false;				this.gotoAndStop(1);				trace("flip back");							}		}				/*public function handleAnimation(e:Event){			if(firstCard.getFrameNumber(2) + secondCard.getFrameNumber(2) == null) {				handleOnHatPlacement();								//if both cards were removed and are now null, play animation for that.								} else if {								}			 		}*/	}	}