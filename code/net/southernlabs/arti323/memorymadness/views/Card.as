package net.southernlabs.arti323.memorymadness.views {		import flash.display.MovieClip		public class Card extends MovieClip {				private var card_name:String;		private var frame_number:uint;		private var is_card_showing:Boolean;		public function Card() {			// constructor code			is_card_showing = false;		}				public function setName(n:String):void {			card_name = n;		}				public function getName():String {			return card_name;		}				public function setFrameNumber(i:uint):void {			if(i>=0){				frame_number = i;			} else {				throw new Error("The frame number must be set zero or higher, ref: "+this.name); 			}		}				public function getFrameNumber():uint {			return frame_number;		}				public function flip(){			if(is_card_showing==false){				// flip animation to reveal card				is_card_showing = true;							} else {				// flip animation to hide card				is_card_showing = false;							}		}	}	}